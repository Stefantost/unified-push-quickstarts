<widget id="org.jboss.aerogear.unifiedpush.ionic.Quickstart" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Angular Quickstart</name>
    <description>
        A sample Cordova application that shows how to use the UnifiedPush server in a CRUD application with the ionic framework
    </description>
    <author email="aerogear-dev@lists.jboss.org" href="http://aerogear.org">
        AeroGear Developer Mailing List
    </author>
    <content src="index.html" />
    <access origin="*" />

    <!-- Don't store local date in an iCloud backup. Turn this to "cloud" to enable storage
         to be sent to iCloud. Note: enabling this could result in Apple rejecting your app.
    -->
    <preference name="BackupWebStorage" value="none" />
    <!-- enable restore -->
    <feature name="AeroGear PushPlugin">
		  <param name="id" value="org.jboss.aerogear.cordova.push" />
    </feature>
    <feature name="StatusBar">
        <param name="id" value="org.apache.cordova.statusbar" />
    </feature>
</widget>
